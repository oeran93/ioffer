function get_offers(latitude,longitude,tag_id,subtag_id){
	$.ajax({
		type:'get',
		url:'show?latitude='+latitude+'&longitude='+longitude+'&tag_id='+tag_id+'&tag_id='+subtag_id,
		success:function(data){
			alert(data)
			$("#search_page").html(data)
		}
	});
}

function set_position(position){
	var tag_id = $("#tag_id").val()
	var subtag_id = $("#subtag_id").val()
	get_offers(position.coords.latitude.toString(),position.coords.longitude.toString(),tag_id,subtag_id)
}

