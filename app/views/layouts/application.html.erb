<!DOCTYPE html>
<html>
<head>
  <title>iOffer</title>
  <%= javascript_include_tag('application') %>
  <%= stylesheet_link_tag('application', :media => 'all') %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Cabin" %>
</head>
<body>
	<header>
		<%= link_to(image_tag("logo.png", :size => "250x75", :alt => "logo") , "#", :id => "logo") %>
		<% if @business.nil? %>
			<%= link_to("Sign in", "#sign_in_modal", :method => "get", :id => "sign_in") %>
		<% else %>
			 <%= link_to("#{@business.name} ", "business#profile", :id => "profile_name") %>
			 <%= link_to(image_tag("/images/1.png", :alt => "profile image", :id => "profile_image"), "business#profile") %>
		<% end %> 
		
	</header>

	<nav> 
		<ul>
			<li> <%= link_to(image_tag("home_icon.png", :size => "25x25") + "Home", index_path, :remote => true) %> </li>
			<li> <%= link_to("Nearby", "#") %> </li>
			<li> <%= link_to("My Offers", "#") %> </li>
		</ul>
	</nav>

	<div id="modal_box_" class="modal_dialog">
		<a href="#close" title="Close" class="close">X</a>
		<div id="content"></div>
	</div>

	<main>
		<%= yield %>
	</main>


</body>
</html>



