<!DOCTYPE html>
<html>
<head>
  <title>iOffer</title>
  <%= javascript_include_tag('application') %>
  <%= stylesheet_link_tag('application', :media => 'all') %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Cabin" %>
</head>
<body>
	<header>
		<%= link_to(image_tag("logo.png", :size => "250x75", :alt => "logo") , {:controller => "offers", :action => "index"}, :id => "logo") %>
		
		<% if is_user_signed_in %>
			<% puts "Session Id #{session[:id]}" %>
			<% puts "Business.nil?: #{@business.nil?}" %>
			<div id="profile_button">
			 	<%= link_to(image_tag("", :alt => "profile image", :id => "profile_image") + "#{Business.find(session[:id]).name} ", {:controller => "business", :action => "profile"}, :title => "View/Edit your profile") %>
			</div>
			<%= link_to("Sign Out", {:controller=>"business", :action => "sign_out"}, :id => "sign_out_link") %>
		<% else %>
			<%= link_to("Sign in", {:controller => "business", :action => "sign_in"}, :method => "get", :id => "sign_in") %>
		<% end %> 
	</header>

	<nav> 
		<ul>
			<li> <%= link_to(image_tag("home_icon.png", :size => "25x25") + " Home", {:controller => "offers", :action => "index"}) %> </li>
			<li> <%= link_to(image_tag("map_icon.png", :size => "25x25") + " Nearby", "#") %> </li>
			<li> <%= link_to(image_tag("offer_icon.png", :size => "25x25") + " My Offers", "#") %> </li>
		</ul>
	</nav>

	<div id="modal_box_" class="modal_dialog">
		<a href="#close" title="Close" class="close">X</a>
		<div id="content"></div>
	</div>

	<main>
		<%= yield %>
	</main>


</body>
</html>



