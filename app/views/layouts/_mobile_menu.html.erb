<div id="header_mobile">
	<div id="mobile_logo_ctn">
		<%= link_to(image_tag("logo.png", :alt => "" , :id => "logo") , {:controller => "offers", :action => "index"}) %>
	</div>
	<div id="mobile_menu_ctn">
		<ul id="mobile_menu">
			<% if is_business_signed_in %>
			<li><%= link_to(image_tag(Business.find(session[:business_id]).image.url, :alt => "profile image", :id => "mobile_profile_image") + raw("<b>View Profile</b>"), {:controller => "business", :action => "profile"}, :title => "View/Edit your profile") %>
			</li>
			<li>
				<%= link_to("Manage Offers", {:controller=>"offers", :action=>"manage"}) %>
			</li>
			<% end %>
			<li><%= link_to "Browse", {:controller=>"offers", :action=>"index"}, class: cp("/") %></li>
			<li><%= link_to "About", {:controller=>"pages", :action =>"show", :page => "about"} , class: cp("/pages/show?page=about")%></li>
			<% if is_user_signed_in %>
			<li><%= link_to "My Offers", {controller: "user", action:"my_offers"} , class: cp("myoffers")%>
			</li>
			<% end %>
			<% if is_business_signed_in or is_user_signed_in%>
			<li>
				<%= link_to("Sign Out", {:controller=>"sign_in_out", :action => "sign_out"}) %>
			</li>
			<% else %>
			<li><%= link_to("Sign in", {:controller => "sign_in_out", :action => "sign_in"}, :method => "get") %>
			</li>
			<% end %>
		</ul>
	</div>
</div>