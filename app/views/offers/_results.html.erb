<ul id="grid">
	<%= hidden_field_tag(:latitude, latitude) %>
	<%= hidden_field_tag(:longitude, longitude) %>
	<% tag_name = Tag.find_by_id(tag_id).nil? ? "" : Tag.find_by_id(tag_id).name%>
	<% subtag_name = Subtag.find_by_id(subtag_id).nil? ? "" : Subtag.find_by_id(subtag_id).name %>
	<%= "Showing results for: #{tag_name}, #{subtag_name}"%><hr>
	<% if offers.blank? %>
	<%= "No offers to display" %>
	<% else %>
	<% offers.each do |offer| %>
	<li>
		<figure>
			<div class="percent_label <%= offer.percentage.to_words %>">
				<h2><%= offer.percentage %>%</h2>
			</div>
			<%= image_tag(offer.business.image.url) %>
			<figcaption>
				<h3><%= link_to(offer.business.name, {controller: 'business', action: 'show', id: offer.business.id}) %><i><%=offer.business.distance_from(latitude+', '+longitude).round(2)%></i></h3>
				<% date = offer.offer_dates.last %>
				<% start_time = Time.at(date.start_time) %>
				<% end_time = Time.at(date.end_time) %>
				<p> <%= start_time.hour %>:<%= format('%02d',start_time.min) %> - 
				<%= end_time.hour %>:<%= format('%02d',end_time.min) %></p>

				<% if is_user_signed_in %>
					<div class='offer_btn' id='get_offer_btn'>Get Offer</div>
				<% elsif is_business_signed_in %>
					<%= link_to("Manage My Offers", {controller: 'offers', action: 'manage'}, class: 'offer_btn') %>
				<% else %>
					<%= link_to("Sign In To Get Offers", {controller: 'user', action: 'sign_in'}, class: 'offer_btn') %>
				<% end %>
				</figcaption>
			</figure>
		</li>
		<% end %>
		<% end %>
	</ul>



