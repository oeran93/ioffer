<div id="search_page" >
	<div id="filter_bar">
		<div id="tag_bar">
			<h2>Select a category...</h2>
			<% Tag.all.find_each do |tag| %>
			<%= link_to("#{tag.name}", "#", data: {tag_id: tag.id}, class: "tag_button") %>
			<% end %>

			<% Tag.all.find_each do |tag| %>
			<div class="subtag_bar" id="<%= tag.id %>" style="display: none;">
			<% tag.subtags.all.find_each do |subtag| %>
				<%= link_to("#{subtag.name}", "#", data: {tag_id: tag.id}) %>
				<% end %>
			</div>
		<% end %>
		</div>

		<%= hidden_field_tag(:tag_id, tag_id) %>
		<%= hidden_field_tag(:subtag_id, subtag_id) %>
		<%= hidden_field_tag(:latitude, latitude) %>
		<%= hidden_field_tag(:longitude, longitude) %>

	</div>
	<div id="position_map"></div>
	<ul class="grid">
		<% tag_name = Tag.find_by_id(tag_id).nil? ? "" : Tag.find_by_id(tag_id).name%>
		<% subtag_name = Tag.find_by_id(subtag_id).nil? ? "" : Subtag.find_by_id(subtag_id).name%>
		<%= "Showing results for: #{tag_name}, #{subtag_name}"%><hr>
		<% if offers.blank? %>
		<%= "No offers to display" %>
		<% else %>
		<% offers.each do |offer| %>
		<li>
			<figure>
				<div class="percent_label <%= offer.percentage.to_words %>">
					<h2><%= offer.percentage %>%</h2>
				</div>
				<%= image_tag(offer.business.image.url) %>
	
				<figcaption>
					<h3><%= offer.business.name %><%=offer.business.distance_from(@location).round(2)%></h3>
					<% date = offer.offer_dates.last %>
					<% start_time = Time.at(date.start_time) %>
					<% end_time = Time.at(date.end_time) %>
					<p> <%= start_time.hour %>:<%= format('%02d',start_time.min) %> - 
					 <%= end_time.hour %>:<%= format('%02d',end_time.min) %></p>
				</figcaption>
			</figure>
		</li>
		<% end %>
		<% end %>
	</ul>
</div>
