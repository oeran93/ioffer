<% if is_user_signed_in %>
	<div id="new_offer"> 
		<%= render(template: "offers/new") %>
	</div>
<% end %>

<div id="filter_bar"> 
	<h2>Search Filter</h2>	
</div>

	<% @offers = Offer.all %>
	<ul class="grid">
		
		<%= render(partial: "results", locals: {offers: @offers}) %>
	</ul>
</div>

<br>
<%= link_to("load none", fetch_businesses_path, :remote => true) %>
<br>
<p>
	<% if Offer.all.count == 0 %> 
		<%= "No offers to show." %>
	<% else %>
		<%= "Total offers loaded: #{Offer.all.count}" %>
	<% end %>
</p>
