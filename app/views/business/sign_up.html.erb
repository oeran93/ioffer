<%= stylesheet_link_tag "business.css" %>
<div class="page" id="sign_up">
	<div id="input">
		<table>
		<%= error_messages_for(@business) %>
		<%= form_for(:business, :url => {:action => "create"}, 
			:html => {:multipart => true}) do |f| %>
  				<tr> 
  					<td><%= f.label(:name, "Name *") %></td> 
  					<td><%= f.text_field(:name, :maxlength => 40, :class=>"text_input") %></td>
  				</tr>
  				<tr> 
  					<td><%= f.label(:password, "Password *") %></td> 
  					<td><%= f.password_field(:password, :maxlength => 40,:autocomplete => "off", :class=>"text_input") %></td>
  				</tr>
  				<tr> 
  					<td><%= f.label(:email, "Email *") %></td> 
  					<td><%= f.text_field(:email, :maxlength => 40, :class=>"text_input") %></td>
  				</tr>
  				<tr> 
  					<td><%= f.label(:country, "Country *") %></td> 
					<td><%= f.select(:country, options_for_select({"Italia"=>"Italia", "United States"=>"United States"})) %></td>
  				</tr>
  				<tr> 
  					<td><%= f.label(:city, "City *") %></td> 
  					<td><%= f.text_field(:city, :class=>"text_input") %></td>
  					<td><%= f.label(:state, "State *") %></td> 
  					<td><%= f.text_field(:state, :class=>"text_input") %></td>
  					<td><%= f.label(:zip, "Zip *") %></td> 
  					<td><%= f.text_field(:zip, :size => 5, :maxlength => 8, :class=>"text_input") %></td>
  				</tr>
  				<tr> 
  					<td><%= f.label(:address, "Address *") %></td> 
  					<td><%= f.text_field(:address, :class=>"text_input") %></td>
  				</tr>
          <tr> 
            <td><%= f.label(:tags, "Category *") %></td> 
          <td><%= f.select(:tags, options_for_select(Tag.all.collect {|t| [t.name, t.id] })) %></td>
          </tr>
          <tr> 
            <td><%= f.label(:subtags, "Sub Category") %></td> 
          <td><%= f.select(:subtags, options_for_select(Subtag.all.collect {|t| [t.name, t.id] })) %></td>
          </tr>
  				<tr> 
  					<td><%= f.label(:phone, "Phone") %></td> 
  					<td><%= f.text_field(:phone, :class=>"text_input") %></td>
  				</tr>
  				<tr> 
  					<td><%= f.label(:website, "Website") %></td> 
  					<td><%= f.text_field(:website, :class=>"text_input") %></td>
  				</tr>
  				<tr> 
  					<td><%= f.label(:image, "Image") %></td> 
  					<td><%= f.file_field(:image) %></td>
  				</tr>
  				<tr>  
  					<td><%= f.submit("Submit", :class=>"submit_btn") %></td>
  				</tr>
		<% end %>
		
		</table>
	</div>

</div>